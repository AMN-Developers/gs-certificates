generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.1.x"]
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id                 Int               @id
  certificateTokenId Int               @unique
  certificateTokens  CertificateTokens @relation(fields: [certificateTokenId], references: [id])
  certificates       Certificate[]
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt

  @@map("user")
}

model CertificateTokens {
  id           Int      @id @default(autoincrement())
  user         User?
  higienizacao Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("certificate_tokens")
}

model Certificate {
  tokenHash     String   @id @db.VarChar(64)
  encryptedData String   @db.VarChar(1000)
  issuedAt      DateTime
  user_id       Int
  user          User     @relation(fields: [user_id], references: [id])

  @@map("certificate")
}
