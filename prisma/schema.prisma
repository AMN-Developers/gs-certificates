generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id                Int                @id
  certificateTokens CertificateToken[]
  certificates      Certificate[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@map("user")
}

enum CertificateTokenType {
  HIGIENIZACAO
}

enum Role {
  USER
  ADMIN

  @@map("roles")
}

model CertificateToken {
  id        Int                  @id @default(autoincrement())
  user_id   Int?
  user      User?                @relation(fields: [user_id], references: [id])
  type      CertificateTokenType
  quantity  Int
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@map("order")
}

model Certificate {
  tokenHash     String   @id @db.VarChar(64)
  encryptedData String   @db.VarChar(1000)
  issuedAt      DateTime
  user_id       Int
  user          User     @relation(fields: [user_id], references: [id])

  @@map("certificate")
}
